<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/list_selector">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Service Engineer ( 1450 )"
        android:id="@+id/service_engineer_name"
        android:layout_gravity="left|center_vertical"
        style="@style/customer_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mylapore"
        android:id="@+id/customer_location"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/service_engineer_name"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="9840888322"
        android:id="@+id/customer_phone"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/customer_location"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Present"
        style="@style/customer_list_count"
        android:id="@+id/customer_product_count"
        android:layout_marginRight="17dp"
        android:layout_alignBottom="@+id/customer_location"
        android:layout_toLeftOf="@+id/textView5"
        android:textSize="12dp"
        android:textColor="#106615" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=">"
        android:id="@+id/textView5"
        android:layout_marginRight="23dp"
        android:layout_alignBottom="@+id/customer_product_count"
        android:layout_alignParentRight="true" />

</RelativeLayout>