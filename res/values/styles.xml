<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style parent="android:Theme.DeviceDefault.Light.NoActionBar" name="no_title"></style>
    <style name="dashboard_oval">
        <item name="android:background">@drawable/oval</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="dashboard_title">
        <item name="android:textSize">20dp</item>
        <item name="android:typeface">sans</item>

    </style>

    <style name="dashboard_label">
        <item name="android:textSize">12sp</item>


    </style>
    <style name="customer_name">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="customer_list_count">
        <item name="android:background">@drawable/list_count_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20dp</item>
    </style>


</resources>
